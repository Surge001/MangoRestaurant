@{
    ViewData["Title"] = "ProductIndex";

}
@model IEnumerable<Mango.Web.Models.Dto.ProductDto>


<br />
<br />
<div class="container p-4 border">
    <div class="p-2 row">
        <div class="col">
            <h1 class="text-info">Product List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="ProductCreate" class="btn btn-outline-info"><i class="fas fa-plus"></i> Create New</a>
        </div>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category Name</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.CategoryName</td>
                <td>@((item.Price).ToString("C"))</td>
                <td>
                    <a asp-action="ProductEdit" class="btn btn-success" asp-route-productId="@item.ProductId">
                        <i class="fas fa-edit"></i> Edit
                    </a>

                    <a asp-action="ProductDelete" class="btn btn-danger" asp-route-productId="@item.ProductId">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

